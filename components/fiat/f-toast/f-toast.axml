<import-sjs name="element" from="../../../utils/element.sjs"/>

<view class="{{ element.classAttr('f-toast ' + type + (snackbar ? ' f-toast-snackbar' : ''), className) }}"
  style="display: {{ visible ? 'flex' : 'none' }};">
  <view class="f-toast-inner-container" style="{{ type === 'spin' ? 'background: none;' : '' }}">
    <transition name="f-fade">
      <f-overlay
        a:if="{{ type === 'spin' }}"
        type="white">
        <f-icon name="loading-spinner" class="logo-front"/>
        <f-icon name="loading-back" class="logo-back"/>
      </f-overlay>
    </transition>
    <transition name="f-alert">
      <view a:if="{{ type !== 'spin' }}" style="display: flex; align-items: center">
        <view class="icon-wrapper">
          <f-icon name="{{ icon }}" a:if="{{ icon }}"/>
          <f-icon name="f-success" a:elif="{{ type === 'success' }}"/>
          <f-icon name="f-warning" a:elif="{{ type === 'warning' }}"/>
          <f-icon name="f-error-round" a:elif="{{ type === 'error' }}"/>
        </view>
        <view class="text">{{ message }}</view>
        <view
          a:if="{{ actionText }}"
          class="f-toast-button-wrapper">
          <f-btn onTap="onAction"
            type="ghost"
            size="small"
            class="pr-0">
            {{ actionText }}
          </f-btn>
        </view>
      </view>
    </transition>
  </view>
</view>